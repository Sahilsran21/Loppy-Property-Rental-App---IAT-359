<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:backgroundTint="#DADEFB"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/settingsBackgroundColor"
        android:layout_width="350dp"
        android:layout_height="455dp"
        android:layout_marginTop="90dp"
        android:background="#9496A8"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/scrollView2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/scrollView2"
        app:layout_constraintTop_toTopOf="@+id/scrollView2" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="25dp"
                android:text="Sahil Sran"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="34sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/editProfileButton"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:background="#00FFFFFF"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/edit_profile_button" />

                <ImageButton
                    android:id="@+id/createListingButton"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:background="#00FFFFFF"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/create_listing_button" />

                <ImageButton
                    android:id="@+id/myListingsButton"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:background="#00FFFFFF"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/my_listings_button" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="235dp">

                <ImageButton
                    android:id="@+id/homeButtonProfilePage"
                    android:layout_width="190dp"
                    android:layout_height="78dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:padding="2dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/home_button" />

                <ImageButton
                    android:id="@+id/profileButtonProfilePage"
                    android:layout_width="190dp"
                    android:layout_height="78dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:padding="2dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/selected_profile_button" />

                <Button
                    android:id="@+id/fbtest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="firebase_test"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>