<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <View
        android:id="@+id/view8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:backgroundTint="#DADEFB"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/descriptionColor"
        android:layout_width="350dp"
        android:layout_height="270dp"
        android:layout_marginTop="10dp"
        android:background="#C5C9E3"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="30dp"
                android:text="Room"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="34sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="415dp"
                android:layout_height="240dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="491dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="visible"
                    app:srcCompat="@drawable/room_image" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="265dp"
                android:layout_height="54dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="15dp"
                android:text="Single room located in Surrey, shared washroom"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="174dp"
                android:layout_height="51dp"
                android:layout_marginStart="40dp"
                android:text="13450 102 Ave, Surrey, BC V3T 0A3" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="About"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="329dp"
                android:layout_height="109dp"
                android:layout_marginStart="40dp"
                android:text="The 200 sq ft patio with normally unobstructed views of the ocean and Mts. will not be able to be enjoyed in this unit for some time. Condo needs to be rented in the meantime. So please inquire if you want a beautiful 1 Bedroom/1 Bathroom Condo for an amazing price. "
                android:textColor="#000000" />

            <ImageButton
                android:id="@+id/emailButton"
                android:layout_width="375dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                android:layout_marginTop="45dp"
                android:background="#00FFFFFF"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/email_button" />

            <ImageButton
                android:id="@+id/phoneButton"
                android:layout_width="375dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#00FFFFFF"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/phone_button" />

            <ImageButton
                android:id="@+id/bookButton"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#00FFFFFF"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/book" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/homeButtonRoomPage"
                    android:layout_width="190dp"
                    android:layout_height="78dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:backgroundTint="#00FFFFFF"
                    android:padding="2dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/home_button" />

                <ImageButton
                    android:id="@+id/profileButtonRoomPage"
                    android:layout_width="190dp"
                    android:layout_height="78dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:backgroundTint="#00FFFFFF"
                    android:padding="2dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/profile_button" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>