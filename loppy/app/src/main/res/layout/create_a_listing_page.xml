<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/purpleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:backgroundTint="#DADEFB"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/createAListingTitle"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="25dp"
                android:text="Create a Listing"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="34sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/propertyNameLayout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/propertyName"
                    android:layout_width="340dp"
                    android:layout_height="25dp"
                    android:text="Property Name:"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/propertyNameUserInput"
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/addressLayout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/address"
                    android:layout_width="340dp"
                    android:layout_height="25dp"
                    android:text="Address:"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/addressUserInput"
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/postalCodeLayout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/postalCode"
                    android:layout_width="340dp"
                    android:layout_height="25dp"
                    android:text="Postal Code:"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/postalCodeUserInput"
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/propertyDescriptionLayout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/propertyDescription"
                    android:layout_width="340dp"
                    android:layout_height="25dp"
                    android:text="Property Description:"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/propertyDescriptionUserInput"
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/emailLayout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/email"
                    android:layout_width="340dp"
                    android:layout_height="25dp"
                    android:text="Email:"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/emailUserInput"
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/phoneNumberLayout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/phoneNumber"
                    android:layout_width="340dp"
                    android:layout_height="25dp"
                    android:text="Phone Number:"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/phoneNumberUserInput"
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bookingRateLayout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/bookingRateUserInput"
                    android:layout_width="340dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:text="Booking Rate:"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/bookingRate"
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/finishListingButton"
                android:layout_width="175dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:padding="5dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/create_button" />

            <LinearLayout
                android:id="@+id/bottomButtonsLayout"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/homeButtonListingPage"
                    android:layout_width="190dp"
                    android:layout_height="78dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:padding="2dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/home_button" />

                <ImageButton
                    android:id="@+id/profileButtonListingPage"
                    android:layout_width="190dp"
                    android:layout_height="78dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:backgroundTint="#00FFFFFF"
                    android:padding="2dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/profile_button" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>